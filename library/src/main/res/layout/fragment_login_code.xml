<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/messanger_login_title_code"
        android:layout_marginBottom="20dp"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textSize="@dimen/messanger_fontsize_normal"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/fragment_login_activation_edt_code"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop ="20dp"
        android:ems="5"
        android:gravity="center"
        android:hint=""
        android:background="@android:color/transparent"
        android:inputType="phone"
        android:maxLength="11"
        android:text=""
        android:textColor="#fff"
        android:textSize="@dimen/messanger_fontsize_xxlarg"/>

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/samim_color_gray"
        />
</LinearLayout>