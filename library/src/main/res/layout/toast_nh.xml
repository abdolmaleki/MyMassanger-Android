<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/toast_nh_root"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@drawable/shape_toast_blue"
			  android:gravity="center_vertical|right"
			  android:orientation="horizontal"
			  android:padding="4dp" >

	<TextView
		android:id="@+id/toast_nh_txv_text"
		android:layout_width="0dp"
		android:minHeight="40dp"
		android:layout_height="wrap_content"
		android:layout_marginRight="8dp"
		android:layout_weight="1"
		android:minWidth="75dp"
		android:gravity="right|center_vertical"
		android:paddingLeft="8dp"
		android:textColor="#ffffff"
		android:textAppearance="@style/TextAppearance.Iran"
		android:textSize="@dimen/messanger_fontsize_small"/>

	<TextView
		android:id="@+id/toast_nh_txv_icon"
		style="@style/MyMessanger.Icon.Size30"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:gravity="center"
		android:textAppearance="@style/TextAppearance.Icon.Circled"
		android:textColor="#ffffff" />

</LinearLayout>