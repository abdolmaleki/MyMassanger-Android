<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/shape_bg_default"
	android:gravity="center"
	android:orientation="vertical">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:text="نرم افزار پیام رسان \n ارتش جمهوری اسلامی"
		android:textAppearance="@style/TextAppearance.Yekan"
		android:textColor="@color/samim_color_white"
		android:textSize="@dimen/messanger_fontsize_xlarg" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:background="#1c5f04"
		android:gravity="center"
		android:padding="6dp"
		android:text="نرم افزار پیام رسان با قابلیت ایجاد کانال"
		android:textAppearance="@style/TextAppearance.Yekan"
		android:textColor="#fff"
		android:textSize="@dimen/messanger_fontsize_normal" />



	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="#ca0000"
		android:gravity="center"
		android:padding="6dp"
		android:text="www.aja.com"
		android:textAppearance="@style/TextAppearance.Yekan"
		android:textColor="#fff"
		android:textSize="@dimen/messanger_fontsize_normal" />

</LinearLayout>
