<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- ActionBar styles -->
	<style name="Samim.ActionBar"
		   parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/background_pattern</item>
		<item name="background">@drawable/background_pattern</item>
	</style>

	<style name="Samim.ActionBar.FontButton">
		<item name="android:layout_width">45dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/selector_item_actionbar</item>
		<item name="android:gravity">center</item>
		<item name="android:textAppearance">@style/TextAppearance.Icon.Material</item>
		<item name="android:textColor">@color/samim_color_white</item>
		<item name="android:textSize">@dimen/samim_iconsize_40dp</item>
		<item name="android:padding">0dp</item>
	</style>

	<style name="Samim.ActionBar.ButtonX">
		<item name="android:layout_width">45dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/selector_item_actionbar</item>
		<item name="android:padding">8dp</item>
		<item name="android:scaleType">fitCenter</item>
	</style>

	<style name="Samim.ActionBar.ProgressBar">
		<item name="android:padding">5dp</item>
		<item name="android:layout_width">45dp</item>
		<item name="android:layout_height">match_parent</item>
	</style>
</resources>