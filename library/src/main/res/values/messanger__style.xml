<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Samim"
		   parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/Samim.ActionBar</item>
		<item name="actionBarStyle">@style/Samim.ActionBar</item>
		<item name="android:textAppearance">@style/TextAppearance.Iran</item>
		<item name="android:textViewStyle">@style/TextAppearance.Iran</item>
		<item name="android:windowBackground">@color/samim_color_gray</item>
		<item name="android:colorBackground">@color/samim_color_gray</item>
		<item name="colorPrimaryDark">@color/samim_color_actionbar</item>
	</style>

	<!-- Button -->

	<style name="Samim.Button">
		<item name="android:minHeight">1dp</item>
		<item name="android:minWidth">1dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">@dimen/messanger_fontsize_normal</item>
	</style>

	<style name="Samim.Button.Flat">
		<item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">@dimen/messanger_fontsize_xlarg</item>
		<item name="android:background">@drawable/selector_button_tile</item>
	</style>

	<style name="Samim.Button.Dark">
		<item name="android:textColor">#ffffff</item>
		<item name="android:background">@drawable/selector_button_blue</item>
	</style>

	<style name="Samim.Button.Light">
		<item name="android:textColor">#111111</item>
		<item name="android:background">@drawable/selector_button_light</item>
	</style>

	<style name="Samim.Button.Blue"
		   parent="Samim.Button.Dark">
		<item name="android:background">@drawable/selector_button_blue</item>
	</style>

	<style name="Samim.Button.Red"
		   parent="Samim.Button.Dark">
		<item name="android:background">@drawable/selector_button_red</item>
	</style>

	<style name="Samim.Button.Gules"
		   parent="Samim.Button.Dark">
		<item name="android:background">@drawable/selector_button_gules</item>
	</style>

	<style name="Samim.Button.Cancel"
		   parent="Samim.Button.Light">
		<item name="android:background">@drawable/selector_button_gray</item>
	</style>

	<style name="Samim.Button.Normal"
		   parent="Samim.Button.Light">
		<item name="android:background">@drawable/selector_button_gray</item>
	</style>

	<!-- Input -->

	<style name="Samim.Input">

	</style>

	<style name="Samim.Input.Register">
		<item name="android:textSize">@dimen/messanger_fontsize_normal</item>
		<item name="android:textAppearance">@style/TextAppearance.Iran</item>
		<item name="android:textColor">#222222</item>
		<item name="android:singleLine">true</item>
		<item name="android:padding">3dp</item>
		<item name="android:textColorHint">#777777</item>
		<item name="android:background">@drawable/selector_textbox_input</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Samim.Input.Address">
		<item name="android:textSize">@dimen/messanger_fontsize_normal</item>
		<item name="android:textAppearance">@style/TextAppearance.Iran</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textColorHint">#cccccc</item>
		<item name="android:background">@drawable/selector_textbox_white_input</item>
	</style>

	<!-- Icon -->

	<style name="Samim.Icon">
		<item name="android:textAppearance">@style/TextAppearance.Icon.Material</item>
	</style>

	<style name="Samim.Icon.Size120">
		<item name="android:textSize">@dimen/messanger_iconsize_120dp</item>
	</style>

	<style name="Samim.Icon.Size80">
		<item name="android:textSize">@dimen/messanger_iconsize_80dp</item>
	</style>

	<style name="Samim.Icon.Size60">
		<item name="android:textSize">@dimen/messanger_iconsize_60dp</item>
	</style>

	<style name="Samim.Icon.Size40">
		<item name="android:textSize">@dimen/messanger_iconsize_40dp</item>
	</style>

	<style name="Samim.Icon.Size30">
		<item name="android:textSize">@dimen/messanger_iconsize_30dp</item>
	</style>

	<style name="Samim.Icon.Size20">
		<item name="android:textSize">@dimen/messanger_iconsize_20dp</item>
	</style>

	<style name="Samim.Icon.Size15">
		<item name="android:textSize">@dimen/messanger_iconsize_15dp</item>
	</style>

	<style name="Samim.Icon.Size10">
		<item name="android:textSize">@dimen/messanger_iconsize_10dp</item>
	</style>

	<!--Scrollbar -->

	<style name="Samim.Scrollbar">
		<item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
		<item name="android:scrollbars">vertical</item>
		<item name="android:fadeScrollbars">true</item>
		<item name="android:scrollbarThumbVertical">@drawable/shape_scrollbar_vertical_thumb</item>
		<item name="android:scrollbarTrackVertical">@drawable/shape_scrollbar_vertical_track</item>
		<item name="android:scrollbarSize">4dp</item>
		<item name="android:verticalScrollbarPosition">left</item>
		<item name="android:scrollbarFadeDuration">500</item>
		<item name="android:scrollbarDefaultDelayBeforeFade">500</item>
	</style>

	<style name="Samim.Scrollbar.ListView">
		<item name="android:listSelector">@android:color/transparent</item>
		<item name="android:smoothScrollbar">true</item>
	</style>

</resources>
