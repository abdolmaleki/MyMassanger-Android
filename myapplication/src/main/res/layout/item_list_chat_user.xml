<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="?android:attr/selectableItemBackground"
				android:padding="10dp">

	<TextView
		android:id="@+id/item_list_chat_user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:textColor="@color/samim_color_black"
		android:textSize="@dimen/samim_fontsize_normal" />

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/item_list_chat_user_imgprofile"
		android:layout_width="@dimen/samim_iconsize_50dp"
		android:layout_height="@dimen/samim_iconsize_50dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="10dp" />

</RelativeLayout>