<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/samim_color_gray_dark"
			  android:gravity="center_horizontal"
			  android:orientation="vertical">

	<RelativeLayout
		android:layout_width="300dp"
		android:layout_height="60dp"
		android:background="@drawable/background_pattern">

		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#90000000" />

		<TextView
			style="@style/TextAppearance.IranBold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="ظبط صدا"
			android:textColor="@color/samim_color_white"
			android:textSize="@dimen/messanger_fontsize_normal" />

	</RelativeLayout>

	<TextView
		android:id="@+id/dialog_recorder_btn_record"
		style="@style/Samim.Icon.Size60"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/selector_btn_audio"
		android:gravity="center"
		android:text="@string/icon_material_record9"
		android:textColor="@color/samim_color_red" />

	<LinearLayout
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:padding="20dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/dialog_recorder_btn_close"
			style="@style/TextAppearance.IranBold"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:gravity="center"
			android:text="انصراف"
			android:textColor="@color/samim_color_green_xdark"
			android:textSize="@dimen/messanger_fontsize_normal" />

		<TextView
			android:id="@+id/dialog_recorder_btn_accept"
			style="@style/TextAppearance.IranBold"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:gravity="center"
			android:text="تایید"
			android:textColor="@color/samim_color_green_xdark"
			android:textSize="@dimen/messanger_fontsize_normal" />

	</LinearLayout>

</LinearLayout>