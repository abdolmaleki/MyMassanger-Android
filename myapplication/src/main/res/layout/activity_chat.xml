<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:tag="portrait">

	<FrameLayout
		android:id="@+id/fragment_place_chat_panel"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/samim_color_contentlist_backselected"
		android:visibility="gone">

		<FrameLayout
			android:id="@+id/fragment_place_chat"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

	</FrameLayout>

	<FrameLayout
		android:id="@+id/fragment_place_chathistory_panel"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/samim_color_contentlist_backselected">

		<FrameLayout
			android:id="@+id/fragment_place_chathistory"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

	</FrameLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:id="@+id/activity_main_lvt_splash"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/shape_main"
			android:visibility="gone">

			<ImageView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:scaleType="fitCenter"
				android:src="@drawable/ic_samim_logo_big" />
		</RelativeLayout>
	</FrameLayout>

</LinearLayout>